extends layout
block content
    div
    a(href=`/users/insert`) Aggiungi
    br
    a(href="/users/unit") Lista

    div(class=`${unit.Rarity}`)
        img(src=`/images/${unit.Unit}.png`, height="450" weight="700")
        h2 Nome: #{unit.Unit}
        h2 Cost: #{unit.Cost}
        h2 Hit Speed: #{unit.Hit_Speed}
        h2 Speed: #{unit.Speed}
        h2 Deploy Time: #{unit.Deploy_Time}
        h2 Range: #{unit.Range}
        h2 Target: #{unit.Target}
        h2 Count: #{unit.Count}
        h2 Transport: #{unit.Transport}
        h2 Type: #{unit.Type}
        h2 Rarity: #{unit.Rarity}